<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<DialogPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.PopupController">
   <header>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="218.0" text="Are you sure you want to exit?" textAlignment="CENTER">
         <padding>
            <Insets top="10.0" />
         </padding></Label>
   </header>
   <content>
      <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="65.0" prefWidth="228.0">
         <children>
            <Button fx:id="btnAppClose" layoutX="35.0" layoutY="29.0" mnemonicParsing="false" onAction="#CloseAppFromDialog" prefHeight="30.0" prefWidth="59.0" text="Yes" />
            <Button fx:id="popupClose" layoutX="120.0" layoutY="29.0" mnemonicParsing="false" onAction="#CloseDialog" prefHeight="30.0" prefWidth="55.0" text="No" />
         </children>
      </AnchorPane>
   </content>
</DialogPane>
