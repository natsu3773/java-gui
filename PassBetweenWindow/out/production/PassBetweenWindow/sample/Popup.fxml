<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<DialogPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.PopupController">
   <header>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="218.0" text="Are you sure you want to exit?" textAlignment="CENTER" />
   </header>
   <content>
      <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="65.0" prefWidth="228.0">
         <children>
            <Button fx:id="btnAppClose" layoutX="35.0" layoutY="15.0" mnemonicParsing="false" onAction="#CloseAppFromDialog" text="Yes" />
            <Button fx:id="popupClose" layoutX="138.0" layoutY="15.0" mnemonicParsing="false" onAction="#CloseDialog" text="No" />
         </children>
      </AnchorPane>
   </content>
</DialogPane>
